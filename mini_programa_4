
// Criamos um array de itens como palavras (strings)

const palavras = ["Programa Básico", "Programa de Variáveis", "Programa de Condicionais", "Programa de Simulação de App", "Programa com uso de While"];

// Inicializamos o índice com 0 (de forma que o item a ser exibido será o primeiro)

let indice = 0;

// O laço WHILE executa enquanto o índice for menor que o tamanho do array (que pode ser consultado com os itens 0,1,2,3 e 4)

while (indice < palavras.length) {
    console.log(`Palavra: ${palavras[indice]}`); // Exibe a palavra atual
    indice++; // Incrementa o índice a cada iteração
}

