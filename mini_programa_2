let anoLivro2 = "1995";
let vendasLivro22022 = 427;
let vendasLivro22023 = 570;
let vendasLivro22024 = 207;
a = vendasLivro22022;
b = vendasLivro22023;
c = vendasLivro22024;

let totalLivro2 = a + b + c;

console.log("LIVRO 2");
console.log(" ");

console.log(livro2);
console.log(autorLivro2);
console.log(anoLivro2);
console.log("Vendidos em 2022: ", vendasLivro22022);
console.log("Vendidos em 2023: ", vendasLivro22023);
console.log("Vendidos em 2024: ", vendasLivro22024);


console.log(" ");

console.log("Total de Vendas:", totalLivro2);

console.log(" ");

console.log("===============================div==================================");

