// Iniciaremos esse programa com o título identificador básico

console.log("APLICATIVO DO DIA MUNDIAL DO LIVRO");
console.log(" ");

// Depois que criei esse modelo, vi que ele podia ter como nome – o termo LIVRARIA, mas ficou com esse nome de homenagem mesmo à semana de criação

let livro1 = "A insustentável leveza do ser";
let autorLivro1 = "Milan Kundera";
let anoLivro1 = "1984";
let vendasLivro12022 = 237;
let vendasLivro12023 = 370;
let vendasLivro12024 = 107;
let a = vendasLivro12022;
let b = vendasLivro12023;
let c = vendasLivro12024;

let totalLivro1 = a + b + c;

console.log("LIVRO 1");
console.log(" ");

console.log(livro1);
console.log(autorLivro1);
console.log(anoLivro1);
console.log("Vendidos em 2022: ", vendasLivro12022);
console.log("Vendidos em 2023: ", vendasLivro12023);
console.log("Vendidos em 2024: ", vendasLivro12024);

console.log(" ");

console.log("Total de Vendas:", totalLivro1);

console.log("");

console.log("===============================div==================================");
console.log(" ");


let livro2 = "Ensaio sobre a cegueira";
