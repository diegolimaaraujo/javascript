// Para a criação de um novo mini-programa, podemos ter como referência novas modalidades de atividades

// Independentemente do tipo de programa desejado a elaborar – com alguns recursos como IF/ELIF/ELSE, podemos criar um menu de um aplicativo básico

// Imaginando que cada uma das condicionais deve funcionar como um Botão (que terá como utilidade servir para criar interação em uma tela)


console.log("MINI PROGRAMA 3 em JAVASCRIPT");
console.log("");

let botaoClicado = prompt("O botão escolhido foi:");
console.log(botaoClicado);
console.log("");

if (botaoClicado === "Acesse") {
  console.log("TELA DE LOGIN");
  console.log("");
  console.log("Usuário:______________");
  console.log("Senha:______________");
  console.log("");
  console.log("[ENTRAR]");

} else if (botaoClicado === "Ranking Global") {
  console.log("TELA DE RANKING");
  console.log("");
  console.log("1º Lugar: Domenico_97");
  console.log("2º Lugar: Eleonora_173");
  console.log("3º Lugar: Eurídice_247");
  console.log("4º Lugar: Clitemnestra_587");

} else if (botaoClicado === "Catálogo de Apps") {
  console.log("TELA DE CATÁLOGO");
  console.log("");
  console.log("Basics: Com os Fundamentos em Python");
  console.log("Mini Programa 1: Com um programa simplificado envolvendo variáveis e exibição de informações");
  console.log("Mini Programa 2: Com o uso de condicionais a partir dos comandos IF/ELSE IF/ELSE");

} else if (botaoClicado === "Nossas Redes") {
  console.log("TELA COM NOSSAS REDES");
  console.log("");
  console.log("Instagram: @mini_programas_infinitos");
  console.log("Facebook: @face_mini_programas");
  console.log("Tik Tok: @clock_mini_programas");

} else {
  console.log("Botão indisponível no sistema.");
  console.log("");
  console.log("Ao invés dele, tente as seguintes possibilidades:");
  console.log("");
  console.log("1 - Acesse");
  console.log("2 - Ranking Global");
  console.log("3 - Nossas Redes");
  console.log("");
  console.log("* Só temos os botões acima listados");
}


// A proposta da ferramenta é simular a possibilidade de interação em uma tela que tenha botões, imaginando que os botões sejam condicionais

// Apesar desse sistema não corresponder a exatamente um sistema que seja funcional
